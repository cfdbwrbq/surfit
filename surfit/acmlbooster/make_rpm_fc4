#! /bin/sh
rm `find -name core*`
rm `find -name *.dat`
make dist
cp acmlbooster-2.1.tar.gz $HOME/rpm/SOURCES/
cat rpmmacros > $HOME/.rpmmacros
rpmbuild -ba acmlbooster.spec.fc4
cp $HOME/rpm/SRPMS/acmlbooster-2.1-fc4.src.rpm acmlbooster-2.1-fc4.src.rpm
cp $HOME/rpm/RPMS/i386/acmlbooster-2.1-fc4.i386.rpm acmlbooster-2.1-fc4.i386.rpm


